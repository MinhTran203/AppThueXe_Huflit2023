<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <Button
        android:id="@+id/edtloaixe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onlcick_LoaiXe"
        android:text="LoaiXe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <Button
        android:id="@+id/btndangnhaptest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="DangNhap"
        android:text="Đăng Nhập"
        app:layout_constraintBottom_toTopOf="@+id/edtloaixe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754" />

    <Button
        android:id="@+id/btnsoxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sổ Xe"
        android:onClick="SoXe"
        app:layout_constraintBottom_toTopOf="@+id/btndangnhaptest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDatxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Đặt Xe"
        android:onClick="DatXe"
        app:layout_constraintBottom_toTopOf="@+id/btnsoxe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
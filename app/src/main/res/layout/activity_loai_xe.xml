<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoaiXe.LoaiXe_Activity">

    <ListView
        android:id="@+id/listview_loaixe"
        android:layout_width="match_parent"
        android:layout_height="325dp">

    </ListView>

    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="114dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsualoaixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnthemloaixe"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnxoaloaixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xóa" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loại Xe"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edtidloaixe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="ID loại xe"
        android:textColorHint="@color/black"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edttenloaixe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Tên loại xe"
        android:textColorHint="@color/black"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>